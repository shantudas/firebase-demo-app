<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CallScreenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_oval_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="User Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="72dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnHandleRejectCall"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/bg_oval_red"
                app:srcCompat="@drawable/ic_baseline_call_end_24" />

            <ImageButton
                android:id="@+id/btnHandleAcceptCall"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="24dp"
                android:background="@drawable/bg_oval_green"
                app:srcCompat="@drawable/ic_baseline_call_24" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>